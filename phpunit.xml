<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         bootstrap="./bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true">
    <php>
        <env name="DB" value="mysql"/>
    </php>
    <testsuites>
        <testsuite name="AllTests">
            <file>./tests/RecordTest.php</file>
            <file>./tests/AutoLoaderTest.php</file>
            <!--file>./tests/AuthUserTest.php</file-->
            <file>./tests/CronTest.php</file>
            <file>./tests/PermissionTest.php</file>
            <file>./tests/RolePermissionTest.php</file>
            <file>./tests/RoleTest.php</file>
            <file>./tests/UserTest.php</file>
            <file>./tests/FlashTest.php</file>
            <file>./tests/InflectorTest.php</file>
            <file>./tests/NodeTest.php</file>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="./coverage" charset="UTF-8" yui="true"/>
    </logging>
</phpunit>